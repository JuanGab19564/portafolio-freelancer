                        <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity text-6xl select-none grayscale group-hover:grayscale-0">
                            {service.icon}
                        </div>
                        <div class="text-4xl mb-6 bg-background w-16 h-16 rounded-2xl flex items-center justify-center border border-secondary/20 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300 shadow-lg">
                            {service.icon}
                        </div>
                        <h3 class="text-2xl font-bold mb-4 text-primary group-hover:text-accent transition-colors">
