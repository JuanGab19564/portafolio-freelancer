	<main class="container mx-auto px-4 flex-grow">
		<Hero />
		
		<div id="styles-lab" className="my-32 relative">
            <div class="absolute inset-x-0 top-1/2 -translate-y-1/2 h-px bg-gradient-to-r from-transparent via-secondary/20 to-transparent -z-10"></div>
			<div class="flex justify-center relative">
                <div class="absolute inset-0 bg-accent/5 blur-[100px] rounded-full"></div>
				<ColorPicker client:visible />
			</div>
		</div>

        <section id="services" class="py-32 relative">
            <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">
                <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Lo que hago</span>
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {[
                    { title: 'Desarrollo Web', icon: 'ðŸ’»', desc: 'Sitios ultra-rÃ¡pidos construidos con Astro y optimizados para SEO.' },
                    { title: 'Aplicaciones React', icon: 'âš›ï¸', desc: 'Interfaces modernas, reactivas y totalmente escalables.' },
                    { title: 'DiseÃ±o UI/UX', icon: 'ðŸŽ¨', desc: 'Experiencias de usuario intuitivas y visualmente impactantes.' }
